{
  "version": 2,
  "name": "crypto-telegram-bot",
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/bot/webhook",
      "dest": "/api/bot/webhook.js",
      "methods": ["POST"]
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "BOT_TOKEN": "8579547514:AAFJQR6CL_Ui2Q8-Ac0g_y4vBtwrR4tXraU",
    "WEBAPP_URL": "https://your-app.vercel.app",
    "NODE_ENV": "production"
  },
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "regions": ["fra1"],
  "public": true
}
